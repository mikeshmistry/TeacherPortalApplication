@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserLoginModel.UserName"></label>
                    <input asp-for="UserLoginModel.UserName" class="form-control" />
                    <span asp-validation-for="UserLoginModel.UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserLoginModel.Password"></label>
                    <input asp-for="UserLoginModel.Password" class="form-control" />
                    <span asp-validation-for="UserLoginModel.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="UserLoginModel.RememberMe">
                            <input asp-for="UserLoginModel.RememberMe" />
                            @Html.DisplayNameFor(model => model.UserLoginModel.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
